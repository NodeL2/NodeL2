{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "itemId": {
                "type": "integer"
            },
            "template": {
                "type": "object",
                "properties": {
                    "kind": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "class1": {
                        "type": "integer"
                    },
                    "class2": {
                        "type": "integer"
                    },
                    "mass": {
                        "type": "integer"
                    },
                    "price": {
                        "type": "integer"
                    }
                },
                "required": [
                    "kind",
                    "name",
                    "class1",
                    "class2",
                    "mass",
                    "price"
                ]
            },
            "stats": {
                "type": "object",
                "properties": {
                    "pAtk": {
                        "type": "integer"
                    },
                    "mAtk": {
                        "type": "integer"
                    },
                    "atkSpd": {
                        "type": "integer"
                    },
                    "crit": {
                        "type": "integer"
                    },
                    "accur": {
                        "type": "number"
                    }
                },
                "required": [
                    "pAtk",
                    "mAtk",
                    "atkSpd",
                    "crit",
                    "accur"
                ]
            },
            "etc": {
                "type": "object",
                "properties": {
                    "slot": {
                        "type": "integer"
                    },
                    "soulshot": {
                        "type": "integer"
                    },
                    "spiritshot": {
                        "type": "integer"
                    }
                },
                "required": [
                    "slot",
                    "soulshot",
                    "spiritshot"
                ]
            }
        },
        "required": [
            "itemId",
            "template",
            "stats",
            "etc"
        ]
    }
}
