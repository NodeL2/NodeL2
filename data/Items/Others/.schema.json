{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "itemId": {
                "type": "integer"
            },
            "template": {
                "type": "object",
                "properties": {
                    "kind": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "class1": {
                        "type": "integer"
                    },
                    "class2": {
                        "type": "integer"
                    },
                    "mass": {
                        "type": "integer"
                    },
                    "price": {
                        "type": "integer"
                    }
                },
                "required": [
                    "kind",
                    "name",
                    "class1",
                    "class2",
                    "mass",
                    "price"
                ]
            },
            "etc": {
                "type": "object",
                "properties": {
                    "stackable": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "stackable"
                ]
            }
        },
        "required": [
            "itemId",
            "template",
            "etc"
        ]
    }
}
